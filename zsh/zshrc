# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.

alias sd="systemctl"
alias jd="journalctl"

export VISUAL=vim EDITOR=vim
alias vi="vim"

alias tmux="tmux -2"  # fix tmux->vim colors for me
alias tx="tmux"

alias jo="xdg-open"  # just open
alias t="tree"
alias m="marlin"
alias r="ranger"

alias pstat="perf stat -e task-clock,context-switches,cpu-migrations,page-faults,cpu-cycles,instructions,stalled-cycles-frontend,stalled-cycles-backend,cache-references,cache-misses,branches,branch-misses"

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

source "$HOME/.vim/bundle/gruvbox/gruvbox_256palette.sh"

# SUDO
# hack to keep all aliases to sudo
alias sudo='sudo '
alias _!='sudo $(fc -ln -1)'

# GIT
# switch gcl from alias to function; should lfs clone from my github
unalias gcl
alias gcl="git lfs clone"
function gclx() {
	user=$1
	repo=$2
	shift && shift
	git lfs clone --recursive git@github.com:/$user/$repo $@
}
function gclj() {
	gclx jonasmalacofilho $@
}
function gclp() {
	gclx protocubo $@
}

# SSH
# assumes .config/systemd/user/ssh-agent is running
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"
# add my keys, if not already added
ssh-add -l > /dev/null || ssh-add
# make the ssh-add the last thing here, so that it can
# fail without skiping the rest

